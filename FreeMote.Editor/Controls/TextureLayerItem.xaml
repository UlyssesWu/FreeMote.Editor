<UserControl x:Class="FreeMote.Editor.Controls.TextureLayerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeMote.Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding LayerName}"></TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal" CanHorizontallyScroll="True">
            <Border BorderThickness="3" BorderBrush="Aqua">
                <Image Source="/FreeMote.Editor;component/Resources/tsudumi_by_SojaDou.png" Stretch="UniformToFill"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
